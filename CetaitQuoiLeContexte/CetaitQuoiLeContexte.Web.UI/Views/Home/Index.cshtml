@model List<CetaitQuoiLeContexte.Core.Interfaces.Data.IContext>

@{
    ViewData["Title"] = "";
}
<!-- Portfolio Grid Section -->
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Les dernières phrases sorties de leur contexte</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row" id="short-list">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 portfolio-item">
                    <a href="#context-@item.Id" class="portfolio-link" data-toggle="modal">
                        <div class="caption">
                            @item.Message
                        </div>
                        @item.Message
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<!-- About Section -->
<section class="success" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Nouveau contexte</h2>
                <hr class="star-light">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-2">
                <p>Une nouvelle phrase sortie de son contexte ?</p>
            </div>
            <div class="col-lg-4">
                <p>
                    <textarea id="txtContent" cols="50" rows="5" style="color:black"></textarea>
                </p>
            </div>
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <a href="#" class="btn btn-lg btn-outline" id="btnAddContext">
                    <i class="fa fa-download"></i> Proposes-le !
                </a>
            </div>
        </div>
    </div>
</section>
<!-- Footer -->
<footer class="text-center">
    <div class="footer-above">
        <div class="container">
            <div class="row">
                <div class="footer-col col-md-4">
                    <h3>Maison</h3>
                    <p>
                        Nantes
                    </p>
                </div>
                
                <div class="footer-col col-md-4">
                    <h3>Les créateurs</h3>
                    <p><a href="http://evanboissonnot.fr">Evan BOISSONNOT</a> / Stéphane BONNET</p>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-below">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    Copyright &copy; C'était quoi le contexte 2017
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
<div class="scroll-top page-scroll hidden-sm hidden-xs hidden-lg hidden-md">
    <a class="btn btn-primary" href="#page-top">
        <i class="fa fa-chevron-up"></i>
    </a>
</div>
<!-- Portfolio Modals -->

<div id="long-list">
    @foreach (var item in Model)
    {
        <div class="portfolio-modal modal fade" id="context-@item.Id" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl">
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2">
                            <div class="modal-body">
                                <h2>Nouveau contexte !</h2>
                                <hr class="star-primary">
                                <img src="img/portfolio/cabin.png" class="img-responsive img-centered" alt="">
                                <p>
                                    @item.Message
                                </p>

                                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Fermer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script id="template-short-context" type="text/x-custom-template">
    <div class="col-sm-4 portfolio-item">
        <a href="#context-{0}" class="portfolio-link" data-toggle="modal">
            <div class="caption">
                {1}
            </div>
            {1}
        </a>
    </div>
</script>

<script id="template-long-context" type="text/x-custom-template">
    <div class="portfolio-modal modal fade" id="context-{0}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="modal-body">
                            <h2>Nouveau contexte !</h2>
                            <hr class="star-primary">
                            <img src="img/portfolio/cabin.png" class="img-responsive img-centered" alt="">
                            <p>
                                {1}
                            </p>

                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>

